@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-4">
    <div class="row p-2">
        <div class="col-8"><h3>List of Category</h3></div>
        <div class="col-4 text-end">
            <a class="btn btn-primary" asp-area="Admin" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-circle-fill"></i>&nbspCreate new Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    
        @foreach(var item in Model)
        {
        <tbody>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td>
                <a asp-area="Admin" asp-action="Edit" asp-controller="Category" class="btn btn-primary" asp-route-Id="@item.id">
                <i class="bi bi-pencil-square"></i>&nbsp;Edit
                </a>
            <a asp-area="Admin" asp-action="Delete" asp-controller="Category" class="btn btn-danger" asp-route-Id="@item.id">
                <i class="bi bi-trash3"></i>&nbsp; Delete
                </a>
        </td>
        </tbody>
        }
    

</table>

